from abc import ABC,abstractmethod


class Pessoa(ABC):
    @abstractmethod
    def __init__(self, nome: str, idade: int, senha: str):
        self.__nome = nome
        self.__contato = contato
        self.__idade = idade
        self.__login = contato
        self.__senha = senha
        self.__contatos = []
  
    @property
    def nome(self):
        return self.__nome

    @nome.setter
    def nome(self, nome):
        self.__nome = nome

    @property
    def contatos(self):
        return self.__contatos

    @property
    def idade(self):
        return self.__idade

    @idade.setter
    def idade(self, idade):
        self.__idade = idade

    @property
    def login(self):
        return self.__login

    @login.setter
    def login(self, login):
        self.__login = login

    @property
    def senha(self):
        return self.__senha

    @senha.setter
    def senha(self, senha):
        self.__senha = senha
